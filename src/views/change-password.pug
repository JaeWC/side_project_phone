extends templates/layout

block content
  h1 Change password
  form(method="post", action="/users/change-password")
    input(type="password", placeholder="Current Password", name="currentPassword", required)
    input(type="password", placeholder="New Password", name="newPassword", required)
    input(type="password", placeholder="Confirm New Password", name="confirmNewPassword", required)
    input(type="submit", value="Change")